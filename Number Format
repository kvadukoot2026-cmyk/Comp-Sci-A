package com.mycompany.numberformat;

import java.util.Random;
import java.util.Scanner;
import java.util.Locale;

/**
 *
 * @author KVadukoot2026
 */
public class NumberFormat {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in); 
        //Number 1 
        //Ask for total number of students at Cathedral
        System.out.println("How many students attend Cathedral?");
        int students = scan.nextInt();
        //Ask for the number of girls
        System.out.println("How many girls are at Cathedral?");
        int girlstudents = scan.nextInt();
        //Number of boys at Cathedral
        int boystudents = students - girlstudents;
        System.out.println("The number of boy students is " + boystudents);
        //Percentage of girls at Cathedral
        double percentofgirls;
        System.out.println("The percent of girls at Cathdral is " + ((double)girlstudents/students));
        //Percent of boys at Cathedral
        double percentofboys;
        System.out.println("The percent of boys at Cathedral is " + ((double)boystudents/students));
       
        //Number 2
        




        //Number 3
        //Ask for input of random number in the range 0-15
        System.out.println("Input an integer between 0 and 15");
        int number = scan.nextInt();
        //Declare pi with the math class
        double pi = Math.PI;
        //Round the value of pi to the integer generated from above
        System.out.println("The value of pi rounded to the number of decimals of the given integer is " + roundAvoid(pi, number));
        
        
        //Number 4
        //Declare generator
        Random generator = new Random();
        // Generate random number
        double randomnumber = generator.nextDouble(999e18 - 100000000)+ 100000000; 
        //Decimal format with no scientific notation
        DecimalFormat decimal = new DecimalFormat("");
        //Print the number
        System.out.println("Your random very large number is: " + decimal.format(randomnumber));
        
        
    }
    
    public static double roundAvoid(double value, int places) {
    double scale = Math.pow(10, places);
    return Math.round(value * scale) / scale;
    
     }
}
